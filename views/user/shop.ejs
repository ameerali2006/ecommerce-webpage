        // Function to fetch and update products dynamically
    async function updateProducts() {
        const category = document.getElementById('category').value;
        const search = document.getElementById('search').value;
        const sort = document.getElementById('sort').value;

        const query = `?category=${category}&search=${search}&sort=${sort}`;

        try {
            const response = await fetch(`/getFilteredData${query}`);
            const data = await response.json();

            if (data.success) {
                renderProducts(data.products);
                console.log(data.products);
            } else {
                console.error('Error:', data.message);
            }
        } catch (error) {
            console.error('Fetch error:', error);
        }
    }

    // Function to render products dynamically
    function renderProducts(products) {
        const productList = document.getElementById('productList');
        productList.innerHTML = '';

        products.forEach(product => {
            const productCard = `
                <div class="col-lg-3 col-md-4 col-12 col-sm-6">
                                        <div class="product-cart-wrap mb-30">
                                            <div class="product-img-action-wrap">
                                                <div class="product-img product-img-zoom">
                                                    <a href="/productDetails?id=${product._id}">
                                                        <img class="default-img" src="/uploads/re-image/${product.productImage[0]}" alt="${product.productImage[0]}">
                                                        <!-- <img class="hover-img" src="evara-frontend/assets/imgs/shop/product-1-2.jpg" alt=""> -->
                                                    </a>
                                                </div>
                                                
                                                
                                                
                                            </div>
                                            <div class="product-content-wrap">
                                                <div class="product-category">
                                                    <a href="shop-grid-right.html">${product.category.name}</a>
                                                </div>
                                                <h2>${product.productName}</h2>
                                                <div class="rating-result" title="90%">
                                                    <span>
                                                        <span>${product.productOffer}</span>
                                                    </span>
                                                </div>
                                                <div class="product-price">
                                                    <span>₹${product.salePrice} </span>
                                                    <span class="old-price">₹${product.regularPrice} </span>
                                                </div>
                                                
                                                <div class="product-action-1 show">
                                                    <a aria-label="Add To Cart" class="action-btn hover-up" onClick="addtocart(${product._id})"><i class="fi-rs-shopping-bag-add"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


            
            `;
            productList.innerHTML += productCard;
        });
    }

    // Add event listeners to inputs
    document.getElementById('category').addEventListener('change', updateProducts);
    document.getElementById('search').addEventListener('input', updateProducts);
    document.getElementById('sort').addEventListener('change', updateProducts);

    // Initial fetch to populate products
    updateProducts();


    function removeFromWishlist(productId) {
        fetch(`/removeFromWishlist?id=${productId}`, { method: 'DELETE' })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                            icon: 'success',
                            title: 'Removed!',
                            text: data.message, 
                        }).then(()=>window.location.reload())
                } else {
                    Swal.fire('Oops!', data.message, 'error');
                }
            })
            .catch(error => console.error('Error:', error));
    }
    function wishlist(productId){
            if (!productId) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Invalid Action',
                    text: 'Product ID is missing!',
                });
                return;
            }
            console.log('work 1');
            fetch(`/addtoWishlist?id=${productId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        console.log('work 1');

                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: data.message,
                        }).then(()=>window.location.reload())
                    } else {
                        Swal.fire({
                            icon: 'info',
                            title: 'Oops!',
                            text: data.message,
                        });
                    }
                })
                
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Something went wrong. Please try again later.',
                    });
                });
        }
        
        
